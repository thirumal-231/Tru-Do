<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-700 h-screen flex flex-col justify-center items-center">
    <h1 class="text-6xl font-bold text-white my-4">Tru Do</h1>
    <div class="w-full max-w-4xl bg-slate-800 rounded-lg shadow-lg h-5/6 p-4">
      <!-- Add button -->
      <div class="flex justify-start mb-4">
        <button
          class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
        >
          <a href="/todos/add">Add new</a>
        </button>
      </div>

      <!-- Todos list -->
      <div class="space-y-4 overflow-auto h-5/6">
        <% if(!allTodos[0]){ %>
        <h3 class="text-3xl font-bold text-white my-4">
          Nothing here, click ADD to add new one
        </h3>
        <% } %> <% allTodos.forEach(todo => { %>
        <div
          class="flex justify-between items-center bg-gray-100 p-4 rounded-lg shadow"
        >
          <!-- Todo Title -->
          <h3 class="text-lg font-bold text-gray-800"><%=todo.title%></h3>

          <!-- View and Edit Links -->
          <div class="flex space-x-4">
            <a class="text-blue-500" href="/todos/<%= todo._id %>">VIEW</a>
            <a class="text-green-500" href="/todos/<%= todo._id %>/edit"
              >EDIT</a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
